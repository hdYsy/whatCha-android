<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_move_FFFFFF">

    <include
        android:id="@+id/pagestate"
        layout="@layout/com_wthk_back" />
    <LinearLayout
        android:id="@+id/video_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="@color/color_move_FFFFFF"
     >


          <!--<cn.jzvd.JZVideoPlayerStandard-->
        <!--android:id="@+id/jc_videos"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="9.3"-->
        <!--/>-->
        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.3"
            >

            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/jc_videos"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center" />


        </RelativeLayout>


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"

                >

                <TextView
                    android:id="@+id/video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/color_move_000000" />

                <com.lianjie.andorid.newsView.WarpLinearLayout
                    android:id="@+id/linear_title"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    app:grivate="left"
                    app:horizontal_Space="@dimen/dp_3"
                    app:vertical_Space="@dimen/dp_3" />

                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10" />
            </LinearLayout>


    </LinearLayout>

    <!--图文-->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <com.luck.picture.lib.widget.longimage.SubsamplingScaleImageView
                android:id="@+id/image_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tx_page"
                />

    </ScrollView>

</LinearLayout>
